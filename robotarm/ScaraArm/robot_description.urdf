<?xml version="1.0"?>

<robot name="visual">
  <link name="base_link">
 <origin xyz="0 0 0 " rpy=" 0 0 0"/>
    <visual>
      <geometry>
        <mesh filename="package://robotarm/ScaraArm/ConjoinedBase.dae"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="Link2">
    <origin xyz="0 -0.06 .159 " rpy=" 0 0 3.14159"/>
    <visual>
      <geometry>
        <mesh filename="package://robotarm/ScaraArm/Link2.dae"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <joint name="BaseToLink2" type="revolute">
    <origin xyz="0 -0.06 .159" rpy=" 0 0 3.14159"/>
    <parent link="base_link"/>
    <child link="Link2"/>
    <limit effort="1.0" lower="0" upper="6" velocity="1.0"/>
    <axis xyz = "0 0 1"/>
  </joint>

  <link name="Link3">
    <origin xyz="0.05 0 .01 " rpy=" 0 0 0"/> 
     <visual>
      <geometry>
        <mesh filename="package://robotarm/ScaraArm/Link3.dae"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <joint name="Link2ToLink3" type="revolute">
    <origin xyz="0.05 0 .01" rpy=" 0 0 0"/>
    <parent link="Link2"/>
    <child link="Link3"/>
    <limit effort="1.0" lower="0" upper="6" velocity="1.0"/>
    <axis xyz = "0 1 0"/>
  </joint>


  <link name="Link4">
    <origin xyz="-0.17 -0.025 0 " rpy=" 0 0 0"/>
     <visual>
      <geometry>
        <mesh filename="package://robotarm/ScaraArm/Link4.dae"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link> 
  <joint name="Link3ToLink4" type="revolute">
    <origin xyz="-0.17 -0.025 0" rpy=" 0 0 0"/>
    <parent link="Link3"/>
    <child link="Link4"/>
    <limit effort="1.0" lower="0" upper="6" velocity="1.0"/>
    <axis xyz = "0 1 0"/>
  </joint>
</robot>
